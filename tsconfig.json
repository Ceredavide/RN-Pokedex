{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@assets/*": ["assets/*"],
      "@components/*": ["components/*"],
      "@constants/*": ["constants/*"],
      "@hooks/*": ["hooks/*"],
      "@models/*": ["models/*"],
      "@screens/*": ["screens/*"],
      "@utils/*": ["utils/*"],
      "@interfaces/*": ["interfaces/*"],
    },
    "lib": ["dom", "esnext"]
  },
  "exclude": ["node_modules", "**/node_modules/*"]
}
